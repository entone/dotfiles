general {
        colors = true
        interval = 45
}


order += "volume master"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "load"
order += "tztime local"

volume master {
  format = "â™ª: %volume"
  format_muted = "â™ª: muted (%volume)"
  device = "pulse"
}

wireless _first_ {
        format_up = "%essid: %ip"
        format_down = "down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "%ip"
        format_down = "ğŸ–§: down"
}

battery 0 {
        format = "ğŸ”‹ %percentage %remaining"
}

